<div class="container">
<h2>All the Teams!</h2>
<table class="table table-striped table-bordered">
	<tr>
		<th>Team Name</th>
		<th>Sport</th>
	</tr>
	
	<% @teams.each do |team| %>
	
	<tr>
		<td><%= link_to team.name, team_url(team) %></td>
		<td><%= team.sport.name %></td>
	</tr>
	
	<% end %>
	
</table>

<a href="<%= new_team_url %>" class="btn btn-success">Add Your Own Team</a>
</div>